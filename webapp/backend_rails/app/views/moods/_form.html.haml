= form_for @mood do |f|
  - if @mood.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mood.errors.count, "error")} prohibited this mood from being saved:"
      %ul
        - @mood.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :level
    = f.number_field :level
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Save'
