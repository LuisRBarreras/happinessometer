{
  "name": "happinessometer-service",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "start": "./bin/www",
    "dev": ". ./devenv; forever -w ./bin/www",
    "test": "mocha --require should --require should --ui bdd app/tests/unit/**/*.test.js",
    "test-integration": ". ./testenv; mocha --timeout 15000 --require should --ui bdd app/tests/integration/**/*.test.js",
    "test-api": ". ./apienv; mocha --require should --ui bdd v1/tests/**/*.test.js",
    "test-all": "npm run test; npm run test-integration; npm run test-api",
    "drop-test-db": "mongo happinessometer-test --eval 'db.dropDatabase()'",
    "drop-dev-db": "mongo happinessometer-dev --eval 'db.dropDatabase()'"
  },
  "dependencies": {
    "async": "^1.4.2",
    "bcrypt": "~0.8.3",
    "bextend": "0.0.1",
    "body-parser": "~1.12.4",
    "chalk": "~1.0.0",
    "chance": "^1.0.3",
    "cors": "2.7.1",
    "debug": "~2.2.0",
    "express": "4.12.4",
    "glob": "~4.0.5",
    "http-status": "^0.2.0",
    "jsonwebtoken": "^5.0.4",
    "lodash": "^4.12.0",
    "mandrill-api": "~1.0.45",
    "moment": "^2.10.3",
    "mongoose": "4.4.12",
    "morgan": "~1.5.3",
    "randomstring": "^1.0.6",
    "validate.js": "~0.8.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "forever": "0.14.1",
    "mocha": "^2.2.5",
    "should": "^6.0.3",
    "superagent": "^1.2.0"
  },
  "engines": {
    "node": "4.4.4"
  }
}
